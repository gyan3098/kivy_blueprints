
<Label>:
    font_name: 'Roboto'
    font_size: 60
    markup: True

<RobotoButton@Button>:
    background_normal: "button_normal1.png"
    background_down: "button_down1.png"
    font_name: "Roboto"
    font_size: 25
    bold: True

BoxLayout:
    orientation: "vertical"

    Label:
        id: time
        text: "[b]00[/b]:00:00"


    BoxLayout:
        height: 90
        orientation: "horizontal"
        padding: 20
        spacing: 20
        size_hint: (1,None)

        RobotoButton:
            id: start_stop
            text: "Start"
            on_press: app.start_stop()


        RobotoButton:
            id: reset
            on_press: app.reset()
            text: "Reset"
            background_normal: "red_button_normal.png"
            background_down: "red_button_down.png"


    Label:
        id: stopwatch
        text: "00:00.[size=40]00[/size]"


<ClockLayout>:
    time_prop: time

    Label:
        id: time